{
  "name": "@nichoth/signature-sandbox",
  "version": "0.0.0",
  "private": "true",
  "description": "Sign things",
  "type": "module",
  "main": "public/index.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "lint": "eslint \"./**/*.{ts,js,mjs}\"",
    "test": "npm run test:e2e",
    "test:e2e": "playwright test",
    "test:e2e:update": "rm -rf test/*-snapshots && npm run test:e2e",
    "report": "npx playwright show-report",
    "build": "mkdir -p ./public && rm -rf ./public/* && vite build --mode test",
    "start": "concurrently --kill-others \"npx ntl functions:serve --port=9999 --debug\" \"npx vite\"",
    "preversion": "npm run lint",
    "version": "auto-changelog --template keepachangelog --breaking-pattern 'BREAKING CHANGE' && git add CHANGELOG.md",
    "postversion": "git push --follow-tags",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@nichoth/components": "^0.16.16",
    "@preact/signals": "^2.3.2",
    "@substrate-system/a11y": "^0.0.13",
    "@substrate-system/copy-button": "^0.5.18",
    "@substrate-system/css-normalize": "^0.0.13",
    "@substrate-system/keys": "^0.2.27",
    "@substrate-system/routes": "^5.0.2",
    "@ucans/ucans": "^0.12.0",
    "htm": "^3.1.1",
    "ky": "^1.12.0",
    "preact": "^10.26.4",
    "route-event": "^7.1.1",
    "uint8arrays": "^5.1.0"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@netlify/functions": "^5.0.0",
    "@playwright/test": "^1.56.1",
    "@preact/preset-vite": "^2.9.4",
    "@substrate-system/debug": "^0.9.26",
    "@substrate-system/tapzero": "^0.10.15",
    "@substrate-system/wait-on": "^8.0.3",
    "@types/node": "^24.8.1",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.8.1",
    "auto-changelog": "^2.4.0",
    "concurrently": "^9.0.1",
    "cssnano": "^7.0.6",
    "esbuild": "^0.25.11",
    "eslint": "^8.57.0",
    "eslint-config-standard": "^17.1.0",
    "netlify-cli": "^23.9.1",
    "postcss-nesting": "^13.0.1",
    "stylelint": "^16.25.0",
    "stylelint-config-standard": "^39.0.1",
    "tap-spec": "^5.0.0",
    "typescript": "^5.9.3",
    "vite": "^7.1.10"
  },
  "optionalDependencies": {
    "@substrate-system/tapout": "^0.0.27"
  },
  "keywords": [
    "cryptography",
    "signature"
  ],
  "homepage": "https://github.com/nichoth/signaturesandbox#readme",
  "bugs": {
    "url": "https://github.com/nichoth/signaturesandbox/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nichoth/signaturesandbox.git"
  },
  "license": "MIT",
  "author": "nichoth <nichoth@nichoth.com> (https://nichoth.com)"
}
